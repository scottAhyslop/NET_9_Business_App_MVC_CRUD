@using NET_9_Business_App_MVC.Models
@model Department
@{
    Layout = "_Layout";
}
        <style>
           
            h2 {
                color: green
            }
            </style>

<div class="container-fluid">
        <div class="center">
            <h2><b>Create Department</b></h2>
        <form method='post' action='/departments/create'>
            <div class="row mb-3">
                <div class="col-sm-2">
                  <label class="col-form-label">Name:  </label>
                </div>
                <div class="col-sm-6">
                    <input type='text' class="form-control" name='DepartmentName' value="@Model.DepartmentName" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Location:  </label>
                </div>
                <div class="col-sm-6">
                   <input type='text' class="form-control" name='DepartmentLocation' value="@Model.DepartmentLocation" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Description: </label>
                </div>
                <div class="col-sm-6">
                    <input type='text' class="form-control" name='DepartmentDescription' value="@Model.DepartmentDescription" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2">
                    <label class="col-form-label">Annual Sales:  </label>
                </div>
                <div class="col-sm-6">
                    <input type='text' class="form-control" name='DepartmentAnnualSales' value="@Model.DepartmentAnnualSales" />
                </div>
            </div>
                <button type='submit' class="btn btn-outline-success">Create</button>
           </form>
            
            <a class="btn btn-outline-warning btn-sm" href='/departments/'>Cancel</a>
        </div><!--end class center-->
    </div><!--end container-->
