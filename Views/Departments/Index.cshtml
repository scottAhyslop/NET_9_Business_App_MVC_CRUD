@using NET_9_Business_App_MVC.Models
@using System.Collections

@model IEnumerable<Department>
<html>
<head>
    <title>Departments</title>
    <link href="~/Views/styles.css" rel="stylesheet" />

    <style>
        .center {
            margin:auto;
            
            width: 75%;
            text-align: center;
            border: 3px solid #222;
            padding: 1rem;
        }

        .header {
            text-align: left
        }

        .table {
            text-align: center;
            color:#222;
        }
        .table .btn [href] {
                color: #222;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
    <body style="margin:1.5rem;">
    <div class='center'>
            <div class='header'><h2 style='text-align:left'>Departments List</h2>
                <a href='/departments/create'>Create</a>
            </div>
            <br/>
            <table class='table table-striped'>
                <thead>
                          <tr>
                            <th>Department ID</th>
                            <th>Department Name</th>
                            <th>Department Location</th>
                            <th>Department Decription</th>
                            <th colspan="2">Actions</th>
                           </tr>
                       </thead>
                <tbody>
                       @{
                         if (Model is not null)
                        {
                            foreach (var department in Model)
                            {
                                <tr>
                                    <td>@department.DepartmentId</td>
                                    <td>@department.DepartmentName</td>
                                    <td>@department.DepartmentLocation</td>
                                    <td>@department.DepartmentDescription</td>
                                    <td><a class="btn btn-outline-primary btn-sm" href='/departments/details/@department.DepartmentId'>Details</a></td>
                                <td><a class="btn btn-outline-warning btn-sm" href='/departments/edit/@department.DepartmentId'>Edit</a></td>
                                    <td>
                                    <a class="btn btn-outline-danger btn-sm" href='/departments/delete/@department.DepartmentId'>Delete</a>
                                    </td>
                                </tr>
                            }<!--end foreach block-->
                        }//end Model null check
                       }<!--end C# code block-->
                </tbody><!--close table body-->
            </table><!--close table body-->
        </div><!--close center class-->
    </body>
</html>
